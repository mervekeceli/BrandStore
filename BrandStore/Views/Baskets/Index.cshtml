@model IEnumerable<BrandStore.Models.BasketItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>

<head>

    <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</head>
<body>
    <div class="col-lg-12 col-md-8 col-sm-6 col-xs-4">
        <div class="h-screen bg-gray-300">
            <div class="max-w-md mx-auto bg-gray-100 shadow-lg rounded-lg md:max-w-5xl">
                <div class="md:flex ">
                    <div class="card w-full p-4 px-5 py-5">
                        <div class="md:grid md:grid-cols-3 gap-2 ">
                            <div class="col-span-2 p-5">
                                <h1 class="text-xl font-medium ">My Basket</h1>
                                @if (Model != null)
                                {
                                    @if (Model.Any())
                                    {
                                        @foreach (var _basket in Model)
                                        {
                                            <div class="card-item">
                                                <div class="flex justify-between items-center mt-6 pt-6">
                                                    <div class="flex items-center">
                                                        <img src="~/img/@_basket.Product.MainPhoto" width="60" class="rounded-full ">
                                                        <div class="flex flex-col ml-3"> <span class="md:text-md font-medium">@_basket.Product.Name</span> <span class="text-xs font-light text-gray-400"></span> </div>
                                                    </div>
                                                    <div class="flex justify-center items-center">
                                                        <div class="pr-8 flex "> <span class="font-semibold">-</span> <input type="text" class="focus:outline-none bg-gray-100 border h-6 w-8 rounded text-sm px-2 mx-2" value="1"> <span class="font-semibold">+</span> </div>
                                                        <div class="pr-8 "> <span class="text-xs font-medium">@_basket.Product.Price</span> </div>
                                                        <div><a asp-action="removeFromBasket" asp-route-productId="@_basket.Product.Id"><i class="fa fa-close text-xs font-medium"></i></a></div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                }
                                else
                                {
                                    <p style="margin-left:50px;">Sepetin bos gorunuyor...</p>
                                }

                                <div class="flex justify-between items-center mt-6 pt-6 border-t">
                                    <div class="flex items-center"> <i class="fa fa-arrow-left text-sm pr-2"></i> <span class="text-md font-medium text-green-500">Contiune Shopping</span> </div>
                                    <div class="flex justify-center items-end"> <span class="text-sm font-medium text-gray-400 mr-1">Toplam Fiyat:</span><span class="text-lg font-bold text-gray-800 "> @ViewData["ToplamFiyat"] TL</span> </div>
                                </div>
                            </div>
                            <div class=" p-5 bg-gray-800 rounded overflow-visible">
                                <span class="text-xl font-medium text-gray-100 block pb-3">Kart Detaylari</span> <span class="text-xs text-gray-400 ">Kart Tipi</span>
                                <div class="overflow-visible flex justify-between items-center mt-2">
                                    <div class="rounded w-52 h-28 bg-gray-500 py-2 px-4 relative right-10">
                                        <span class="italic text-lg font-medium text-gray-200 underline">VISA</span>
                                        <div class="flex justify-between items-center pt-4 "> <span class="text-xs text-gray-200 font-medium">****</span> <span class="text-xs text-gray-200 font-medium">****</span> <span class="text-xs text-gray-200 font-medium">****</span> <span class="text-xs text-gray-200 font-medium">****</span> </div>
                                        <div class="flex justify-between items-center mt-3"> <span class="text-xs text-gray-200">Giga Tamarashvili</span> <span class="text-xs text-gray-200">12/18</span> </div>
                                    </div>
                                    <div class="flex justify-center items-center flex-col"> <img src="https://img.icons8.com/color/96/000000/mastercard-logo.png" width="40" class="relative right-5" /> <span class="text-xs font-medium text-gray-200 bottom-2 relative right-5">mastercard.</span> </div>
                                </div>
                                <div class="flex justify-center flex-col pt-3"> <label class="text-xs text-gray-400 ">Karttaki Isim</label> <input type="text" class="focus:outline-none w-full h-6 bg-gray-800 text-white placeholder-gray-300 text-sm border-b border-gray-600 py-4" placeholder=""> </div>
                                <div class="flex justify-center flex-col pt-3"> <label class="text-xs text-gray-400 ">Kart </label> <input type="text" class="focus:outline-none w-full h-6 bg-gray-800 text-white placeholder-gray-300 text-sm border-b border-gray-600 py-4" placeholder="**** **** **** ****"> </div>
                                <div class="grid grid-cols-3 gap-2 pt-2 mb-3">
                                    <div class="col-span-2 ">
                                        <label class="text-xs text-gray-400">Son Kullanma Tarihi</label>
                                        <div class="grid grid-cols-2 gap-2"> <input type="text" class="focus:outline-none w-full h-6 bg-gray-800 text-white placeholder-gray-300 text-sm border-b border-gray-600 py-4" placeholder="mm"> <input type="text" class="focus:outline-none w-full h-6 bg-gray-800 text-white placeholder-gray-300 text-sm border-b border-gray-600 py-4" placeholder="yyyy"> </div>
                                    </div>
                                    <div class=""> <label class="text-xs text-gray-400">CVV</label> <input type="text" class="focus:outline-none w-full h-6 bg-gray-800 text-white placeholder-gray-300 text-sm border-b border-gray-600 py-4" placeholder="XXX"> </div>
                                </div>
                            </div> <form asp-controller="Baskets" asp-action="BuyProducts" method="post">
                                <button name="basketId" value="@ViewData["BasketID"]" class="h-12 w-full bg-green-500 rounded focus:outline-none text-white hover:bg-blue-600">Order</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>